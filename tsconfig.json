{
    "compilerOptions": {
        // base
        "rootDir": "./src",
        "outDir": "./dist/src",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "src/*": ["./src/*"],
        },
        // feature
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "./types",
        // type check
        "strict": true,
        "types": [],
    },
    "include": [
        "./src/**/*"
    ],
}
